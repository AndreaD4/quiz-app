<div class="card">
  <div class="row align-items-center text-center">
    <div class="col-md-12">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :post, html: { class: 'needs-validation', novalidate: "" }) do |f| %>
          <%#= render "devise/shared/error_messages", resource: resource %>
          <img alt="logo" src="/logo-erica.png" class="img-fluid mb-4" style="max-height: 200px">
          <h4 class="mb-3 f-w-400">Recupera Password</h4>
          <p>Inserisci la tua email per ricevere le istruzioni</p>
          <div class="input-group mb-4">
            <span class="input-group-text"><i data-feather="mail"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "La tua email", required: true %>
          </div>
          <%= f.submit "Invia", class: 'btn btn-block btn-primary mb-4', data: { turbo: false } %>
          <p class="mb-0 text-muted"><%= render "devise/shared/links" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
