.card
  .row.align-items-center
    .col-md-12
      .card-body
        .text-center
          %img.img-fluid.mb-4{:alt => "", :src => "/logo-erica.png", style:"max-height: 50px"}/
          %h4.mb-4.f-w-400= t('.change_password')
          %p.small{style: "text-align:left"}= t('.enter_information').html_safe
          = form_for(resource, :as => resource_name, :url => [resource_name, :password_expired], method: :put, :html => {class: 'needs-validation', novalidate: ""}) do |f|
            .form-group.mb-2
              = f.password_field :current_password, autocomplete: 'off', class: 'form-control', required: true, placeholder: 'Password corrente'
            .form-group.mb-2
              = f.password_field :password, required: true, autocomplete: 'off', class: 'form-control', placeholder: t('.new_password')
            .form-group.mb-4
              = f.password_field :password_confirmation, required: true, autocomplete: 'off', class: 'form-control', placeholder: t('.password_confirmation')
              .invalid-feedback
            = f.submit t('helpers.button.confirm'), class: 'btn btn-block btn-primary mb-4', data: { turbo: false }
            %p.mb-0.text-muted= render "devise/shared/links"
