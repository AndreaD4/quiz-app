<%- if controller_name != 'sessions' %>
  <p>
  <%- if controller_name == 'password_expired' %>
    <%= link_to "Login", (current_user.present? ? destroy_user_session_path : destroy_manager_session_path), data: { "turbo-method": :delete }, class: "btn-shadow btn-link" %>
  <% else %>
    <%= link_to "Ritorna al login", new_session_path(resource_name), class: "btn-shadow btn-link" %><br/>
  <% end %>
  </p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrati", new_registration_path(resource_name), class: "btn-shadow btn-link" %><br/>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p>
  <%- if controller_name == 'password_expired' %>
    <%= link_to "Password persa?", (current_user.present? ? destroy_user_session_path : destroy_manager_session_path), data: { "turbo-method": :delete }, class: "btn-shadow btn-link" %>
  <% else %>
    <%= link_to "Password persa?", new_password_path(resource_name), class: "btn-shadow btn-link"%><br/>
  <% end %>
  </p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Non hai ricevuto l'email di conferma?", new_confirmation_path(resource_name), class: "btn-shadow btn-link" %><br/>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn-shadow btn-link" %><br/>
<% end %>
